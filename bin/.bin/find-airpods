#!/bin/bash

HEADER="AirPods Helper"
ICON="$HOME/.bin/airpods.svg"

notify-send \
	"$HEADER" \
	"Connecting to 90:9C:4A:DF:AC:99" \
	--expire-time 1000 \
	--icon ~/.bin/airpods.svg

bluetoothctl power on
bluetoothctl connect 90:9C:4A:DF:AC:99

if [ $? -eq 0 ]; then
	notify-send \
		"$HEADER" \
		"Connected!" \
		--expire-time 3000 \
		--icon "$ICON"

	sleep 4

	pulse-airpods
else
	notify-send \
		"$HEADER" \
		"Failed" \
		--expire-time 5000 \
		--icon "$ICON"
fi

