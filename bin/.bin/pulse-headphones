#!/bin/bash

HEADER="Pulse Helper"
ICON="$HOME/.bin/speaker.svg"

HEADPHONES="alsa_output.usb-Yamaha_Corporation_Steinberg_UR22C-00.analog-stereo"
AIRPODS="bluez_output.14_87_6A_13_20_A2.a2dp_sink"
SONOS="speakerssonosonemediarenderer_dlna"

notify-send \
	"$HEADER" \
	"Switched to headphones" \
	--icon "$ICON" \
	-t 3000

pactl set-default-sink "$HEADPHONES"
