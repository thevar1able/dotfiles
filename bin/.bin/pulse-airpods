#!/bin/bash

HEADER="Pulse Helper"
ICON="$HOME/.bin/speaker.svg"

HEADPHONES="alsa_output.pci-0000_08_00.6.analog-stereo"
AIRPODS="bluez_output.90_9C_4A_DF_AC_99.a2dp-sink"
SONOS="speakerssonosonemediarenderer_dlna"

notify-send \
	"$HEADER" \
	"Switched to AirPods" \
	--icon "$ICON" \
	-t 3000

pactl set-default-sink "$AIRPODS"
